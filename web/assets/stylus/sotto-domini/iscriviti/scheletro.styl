/* sotto-dominio > iscriviti > scheletro */

.content-login
  width: 350px
  display: block
  margin: 0 auto
  margin-top: -50px
  margin-bottom: 3rem
  padding: 40px 20px
  background-color:#fff
  -webkit-box-shadow: $ombra-normale
  -moz-box-shadow: $ombra-normale
  box-shadow: $ombra-normale

  @media (max-width: $min)
    width: 90%

  input[type="password"], input[type="text"]
    background-color: #ddd;
    border: 2px solid #ddd;
    border-radius: 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    font-size: 1rem;
    margin-bottom: .75rem;
    padding: .5rem;
    -webkit-transition: border-color;
    transition: border-color;
    width: 100%;
    color: rgba(0,0,0,0.5);

  h4
    text-align: center;
    font-size: 2rem
    margin-bottom: 7px

  span
    display: block;
    text-align: center
    font-size: 0.9rem

    &:last-child
      font-size: 0.7rem

  form
    width: 100%
    padding: 20px 30px

.error
  width: 350px;
  padding: 5px 10px 10px;
  margin: 0 auto
  display: block
  margin-top: -110px
  margin-bottom: 62px
  background-color: red /* rivedere */
  -webkit-box-shadow: $ombra-normale
  -moz-box-shadow: $ombra-normale
  box-shadow: $ombra-normale

  @media (max-width: $min)
    width: 90%

  h4
    text-align: center
    font-weight: bold
    font-size: 1.2rem
    margin-bottom: 0.3rem
    color: #fff

  span
    display: block
    text-align: center
    font-size: 0.7rem
    color: #fff
