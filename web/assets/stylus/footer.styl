.site-footer
  display: table
  height: 150px
  width: 100%
  background-color: #40484C
  color: #fff
  padding-top: 10px

  &> *
    display: table-cell
    vertical-align: middle

  .textwidget
    width: 33.3333%
    float: left
    padding: 0 7px
    text-align: center
    margin-top: 20px

    @media (max-width: 519px)
      width: 100%
      float: none
      clear: both

    .elenco-sezioni
      margin: 0 auto

      ul
        margin: 0 auto

        li
          padding: 5px 0px

          &:last-child a
            border: none
            line-height: 2.5

          a
            border-bottom: 1px solid #F4F4F4
            padding: 5px 20px
            margin-top: 5px

  .copyright-footer
    padding-top: 10px

  a
    color: #F4F4F4
    font-weight: bold

    &:hover
      color: rgba(0, 0, 0, 0.5)

    p
      margin: 0 auto
      display: block
      text-align: center
      color: #fff

.border-right
  padding-right: 6px
  border-right: 2px solid #F4F4F4

.footer-social
  height: 40px
  width: 40px
  background-color: #F4F4F4
  border-radius: 50%
  background-repeat: no-repeat
  background-size: 65%
  background-position: center

/*social - footer*/
  .list-social
    width: 40px
    height: 40px
    display: inline-block
    margin: 0 5px
    background-color: #F4F4F4
    border-radius: 30px

  .footer-social
    width: 100%
    height: 100%
