.site-footer
  width: 100%
  display: block
  padding: 2rem 1rem
  background-color: colore-loppure
  color: #fff
  font-size: 0.9rem

  &> *
    display: table-cell
    vertical-align: middle

  .content-footer
    max-width: 1200px
    display: block
    margin: 0 auto

    @media (max-width: max)
      width: 100%

  a
    color: grigio-intermedio
    border-bottom: .1rem solid colore-loppure

    &:hover
      color: grigio-intermedio
      border-bottom: .1rem solid grigio-intermedio

  p
    margin: 0 auto
    display: block
    font-size: 0.9rem
    color: #fff

  span
    font-size: 1.1rem

  .footer-documenti
    text-align: right

  .footer-contatti
    text-align: left

  .footer-liste
    ul
      margin-bottom: 2rem

    li
      float: left
      margin: 0rem .6rem
      font-size: 0.8rem
      list-style-type: disc

/*col footer -footer */
.col-footer-4
  width: 24.5%
  float: left
  padding: 1.5rem 1rem
  border-right: .12rem solid grigio-scuro

  &:last-child
    border: none


/*social - footer*/
.footer-social
  height: 40px
  width: 40px
  background-color: #F4F4F4
  border-radius: 50%
  background-repeat: no-repeat
  background-size: 65%
  background-position: center

  .list-social
    width: 40px
    height: 40px
    display: inline-block
    margin: 0 5px
    background-color: #F4F4F4
    border-radius: 30px

  .footer-social
    width: 100%
    height: 100%
