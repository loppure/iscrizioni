/*archive*/
.header-category
  height: 325px
  padding-top: 20px

  .cerchio-logo-page
    margin: 0 auto
    margin-top: 30px
    position: static

    h1
      text-align: center
      margin-top: 19px
      color: #fff
      font-size: 34px
      text-shadow: 2px 2px rgba(0, 0, 0, 0.3)

.category .img-header, .author .img-header
  @media (max-width: 519px)
    height: 270px

.category .page-gray, .author .page-gray
  margin-top: 0
  top: 0
  padding-top: 20px

.section-category .section-cont-article
  width: 100%

.section-category .section-cont-article article section p
  height: 150px

.section-category
  max-width: 100%
  margin-left: auto
  margin-right: auto

  &::after
  clear: both
  content: ""
  display: table

  article
  max-width: 495px;
  margin-bottom: 40px;

  @media (max-width: 719px)
    margin-bottom: 20px

  &:nth-child(2n)
    float: left
    display: block
    margin-right: 0.57917%
    width: 47.61501%
    float: right

    @media (max-width: 719px)
      float: left
      display: block
      margin-right: 0.57917%
      width: 100%

    &:last-child
      margin-right: 0

      @media (max-width: 719px)
        margin-right: 0;

    &:nth-child(2n+1)
      float: left
      display: block
      margin-right: 0.57917%
      width: 47.61501%
      float: left

      &:last-child
        margin-right: 0

        @media (max-width: 719px)
          margin-right: 0

      @media (max-width: 719px)
        float: left
        display: block
        margin-right: 0.57917%
        width: 100%

    .title-article-post
      height: 75px

/* autore */

.author .descrizione-autore .content-autore img
  margin: 0 auto
  display: block
  border-radius: 50%

.author .descrizione-autore h1
  text-align: center
  font-size: 20px
  color: rgba(0, 0, 0, 0.5)

.author .descrizione-autore p
  width: 60%
  margin: 0 auto
  display: block
  margin-bottom: 30px

  @media (max-width: 719px)
    width: 90%
