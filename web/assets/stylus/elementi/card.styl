/* card - elementi*/

/*card-page */

.page-gray .card-page
  background-color: #F4F4F4
  padding: 40px 20px
  margin-bottom: 30px

  @media (max-width: 959px)
    padding: 40px 50px

  @media (max-width: 719px)
  .page-gray .card-page
    padding: 40px 20px

  h3
    margin-left: 62px
    line-height: 2.7
    font-size: 20px
    font-weight: normal

/* card contatti */
.contatti-card .card-page
  height: 190px

  h3
    color: rgba(0, 0, 0, 0.5)
    margin-top: -10px

  h6
    margin-left: 62px
    color: rgba(0, 0, 0, 0.5)
    margin-top: -28px
    font-size: 15px
    font-weight: normal
    font-style: italic

  p
    font-size: 13px
    margin-top: 20px

  span
    margin: 0 auto
    display: block
    text-align: center
    font-size: 18px

/* card team */
.content-people-card .icon-team
  width: 35px
  height: 35px
  background-color: #F4F4F4
  margin: 0 auto
  position: relative
  left: -50px
  top: 9px
  border-radius: 50%

.content-people-card .spoiler h3
  font-size: 18px
  font-weight: normal
  text-align: center
  cursor: pointer
  padding-bottom: 15px

.content-people-card .open h3
  border-bottom: none

/* card rubriche */
.card-page .icon-rubriche
  width: 50px
  height: 50px
  float: left
  border-radius: 50%
  background-repeat: no-repeat
  background-position: center
  background-size: 75%


/* capire che cosa sono - card*/

.sticky
  display: block

.hentry
  margin: 0 0 1.5em

.byline, .updated:not(.published)
  display: none

.single .byline, .group-blog .byline
  display: inline

.page-content, .entry-content, .entry-summary
  margin: 1.5em 0 0

.page-links
  clear: both
  margin: 0 0 1.5em

.section-cont-article article
  max-width: 450px
  width: 100%
  margin: 0 auto
  background-color: #F4F4F4
  margin-bottom: 30px
  cursor: pointer

  header
    padding: 10px 30px

    @media (max-width: 959px)
      padding: 10px 20px

    .text-header-post
      margin-left: 58px
      margin-top: 4px
      width: 70%

      a
        color: rgba(0, 0, 0, 0.5)
        font-size: 18px
        margin-top: -10px
        font-weight: bold

      .date-post
        font-size: 14px
        position: relative
        font-size: 15px
        top: -5px
        color: rgba(0, 0, 0, 0.5)

.section-cont-article article header .img-category-post, .section-cont-article article header .img-article-post
  background-size: 75%
  background-repeat: no-repeat
  background-position: center
  width: 50px
  height: 50px
  border-radius: 50%
  float: left

.section-cont-article article header .img-article-post
  background-color: #F4F4F4
  border: 1px solid rgba(0, 0, 0, 0.5)
  float: right

.section-cont-article article section
  clear: both

  p
    max-height: 150px
    height: auto
    color: black
    font-size: 14.7px
    padding: 10px 40px 0
    margin: 0
    margin-bottom: 10px

    @media (max-width: 959px)
      padding: 10px 28px 0;

  .content-article-post
    border: 12px solid #DDDDDD
    border-top: 4px solid #DDDDDD
    border-bottom: 6px solid #DDDDDD

    @media (max-width: 519px)
      border: none
      border-top: 4px solid #DDDDDD
      border-bottom: 6px solid #DDDDDD

