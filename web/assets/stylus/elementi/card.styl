/* card - elementi*/

/*card-page */

.page-gray .card-page
  background-color: #F4F4F4
  padding: 40px 20px
  margin-bottom: 30px

  @media (max-width: 959px)
    padding: 40px 50px

  @media (max-width: 719px)
  .page-gray .card-page
    padding: 40px 20px

  h3
    margin-left: 62px
    line-height: 2.7
    font-size: 20px
    font-weight: normal

/* card contatti */
.contatti-card .card-page
  height: 190px

  h3
    color: rgba(0, 0, 0, 0.5)
    margin-top: -10px

  h6
    margin-left: 62px
    color: rgba(0, 0, 0, 0.5)
    margin-top: -28px
    font-size: 15px
    font-weight: normal
    font-style: italic

  p
    font-size: 13px
    margin-top: 20px

  span
    margin: 0 auto
    display: block
    text-align: center
    font-size: 18px

/* card rubriche */
.card-page .icon-rubriche
  width: 50px
  height: 50px
  float: left
  border-radius: 50%
  background-repeat: no-repeat
  background-position: center
  background-size: 75%


/* capire che cosa sono - card*/

.sticky {
  display: block;
}

.hentry {
  margin: 0 0 1.5em;
}

.byline,
.updated:not(.published) {
  display: none;
}

.single .byline,
.group-blog .byline {
  display: inline;
}

.page-content,
.entry-content,
.entry-summary {
  margin: 1.5em 0 0;
}

.page-links {
  clear: both;
  margin: 0 0 1.5em;
}

.section-cont-article article {
  max-width: 450px;
  width: 100%;
  margin: 0 auto;
  background-color: #F4F4F4;
  margin-bottom: 30px;
  cursor: pointer;
}
.section-cont-article article header {
  padding: 10px 30px;
}
@media (max-width: 959px) {
  .section-cont-article article header {
    padding: 10px 20px;
  }
}
.section-cont-article article header .text-header-post {
  margin-left: 58px;
  margin-top: 4px;
  width: 70%;
}
.section-cont-article article header .text-header-post a {
  color: rgba(0, 0, 0, 0.5);
  font-size: 18px;
  margin-top: -10px;
  font-weight: bold;
}
.section-cont-article article header .text-header-post .date-post {
  font-size: 14px;
  position: relative;
  font-size: 15px;
  top: -5px;
  color: rgba(0, 0, 0, 0.5);
}
.section-cont-article article header .img-category-post, .section-cont-article article header .img-article-post {
  background-size: 75%;
  background-repeat: no-repeat;
  background-position: center;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  float: left;
}
.section-cont-article article header .img-article-post {
  background-color: #F4F4F4;
  border: 1px solid rgba(0, 0, 0, 0.5);
  float: right;
}
.section-cont-article article section {
  clear: both;
}
.section-cont-article article section p {
  max-height: 150px;
  height: auto;
  color: black;
  font-size: 14.7px;
  padding: 10px 40px 0;
  margin: 0;
  margin-bottom: 10px;
}
@media (max-width: 959px) {
  .section-cont-article article section p {
    padding: 10px 28px 0;
  }
}
.section-cont-article article section .content-article-post {
  border: 12px solid #DDDDDD;
  border-top: 4px solid #DDDDDD;
  border-bottom: 6px solid #DDDDDD;
}
@media (max-width: 519px) {
  .section-cont-article article section .content-article-post {
    border: none;
    border-top: 4px solid #DDDDDD;
    border-bottom: 6px solid #DDDDDD;
  }
}
.section-cont-article article section .title-article-post {
  max-height: 75px;
}
.section-cont-article article section .title-article-post h3 {
  margin: 0;
  margin-left: 10px;
  padding: 15px 5px;
}
