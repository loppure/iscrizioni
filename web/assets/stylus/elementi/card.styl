  margin: 0 3px;
  padding: 1px 5px;
  border: 1px solid #DDDDDD;
  border-radius: 5px;
}
.section-cont-article article footer {
  height: 49px;
  border-bottom: 5px solid rgba(0, 0, 0, 0.5);
  cursor: default;
}


/* card-overlay-image*/
.loppure_image, .post {
  width: 450px;
  background-color: #F4F4F4;
}
.loppure_image figure, .post figure {
  margin: 0;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.loppure_image .img-post, .post .img-post {
  height: 200px;
  width: 100%;
}
