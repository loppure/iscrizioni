.content
  max-width: 100%
  margin-left: auto
  margin-right: auto

  &::after
    clear: both
    content: ""
    display: table

  .widget-card
    padding: 25px 10px
    margin: 10px 0
    background-color: #F4F4F4
    height: 475px

    &:nth-child(2n+1)
      float: left
      display: block
      margin-right: 0.57917%
      width: 47.61501%
