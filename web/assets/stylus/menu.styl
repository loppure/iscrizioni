      @media (max-width: 599px)
        left: 8%;

      @media (max-width: 519px)
        left: -10.5%;

      @media (max-width: 349px)
        left: -11.5%;

      img
        height: 55px
        top: 60px

  .cerchio-logo
    width: 163px
