      margin: 19px auto
      display: block
      position: relative
      z-index: 99
      top: 48px


/*page - sidebar*/
.page-gray
  max-width: 100%
  margin-left: auto
  margin-right: auto
  position: relative

  &::after
    clear: both
    content: ""
    display: table

  .sidebar-1
    float: left
    display: block
    margin-right: 0.57917%
    width: 18.27942%
    float: left
    width: 18%

    &:last-child
      margin-right: 0

    @media (max-width: 959px)
      width: 20%

    @media (max-width: 719px)
      float: left
      display: block
      margin-right: 0.57917%
      width: 100%

  .section-cont-article
    float: left
    display: block
    margin-right: 0.57917%
    width: 53.90121%
    margin-right: 1%
    margin-left: 1%

    &:last-child
      margin-right: 0

    @media (max-width: 959px)
      margin-right: 0
      margin-left: 0.7%

    @media (max-width: 799px)
      margin-right: 0
      width: 54.5%

    @media (max-width: 719px)
      float: left
      display: block
      margin-right: 0.57917%
      width: 100%

  .sidebar-2
    float: left
    display: block
    margin-right: 0.57917%
    width: 24.56562%
    float: right

    @media (max-width: 959px)
      float: left
      display: block
      margin-right: 0.57917%
      width: 22.47022%
      float: right
      margin-left: 0.7%

    @media (max-width: 719px)
      float: left
      display: block
      margin-right: 0.57917%
      width: 100%
      margin: 0

    &:last-child
      margin-right: 0

      @media (max-width: 959px)
        margin-right: 0

      @media (max-width: 719px)
        margin-right: 0;

